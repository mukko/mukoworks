---
import Layout from '../../layouts/Layout.astro';

const title = 'つくったもの';
const base = '/mukoworks/products'

import EightPackage from '@assets/eight/package.png';

const products = [
  {
    title: 'EIGHT エイト',
    description: '1~8を出すカードゲーム',
    href: base + '/eight',
    image: EightPackage.src, // 画像パスは適宜修正
  },
  // 他のプロダクトも同様に追加
];
---

<Layout>

<div class="w-full py-6 max-w-screen-lg mx-auto">
    <h1 class="text-3xl font-bold mb-8">{title}</h1>
    <div class="grid md:grid-cols-3 grid-rows-1 gap-4 pb-6 divide-y md:divide-y-0 divide-x divide-gray-200">
        {products.map(product => (
        <a class="flex flex-col items-center py-2"
            href={product.href}>
            <div class="w-full h-40 flex items-center justify-center mb-4 rounded">
                <img
                    src={product.image}
                    alt={product.title}
                    class="h-full w-auto max-h-full max-w-full object-contain shadow-xl transition duration-200 ease-in-out hover:shadow-2xl hover:-translate-y-1 transform"
                />
            </div>
            <h2 class="text-xl font-semibold mb-2">{product.title}</h2>
            <p class="text-gray-500">{product.description}</p>
        </a>
    ))}
    </div>
</div>

</Layout>